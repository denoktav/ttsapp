        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_reg"
        android:textSize="17sp"
        android:text="@string/updating"/>

</LinearLayout>